{
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "devPath": "http://localhost:5173",
    "distDir": "../dist",
    "withGlobalTauri": false
  },
  "package": {
    "productName": "MoodPulse",
    "version": "0.1.0"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "shell": {
        "all": false,
        "open": true
      },
      "window": {
        "all": false,
        "close": true,
        "hide": true,
        "show": true,
        "maximize": true,
        "minimize": true,
        "unmaximize": true,
        "unminimize": true,
        "startDragging": true,
        "setAlwaysOnTop": true,
        "setPosition": true,
        "setSize": true,
        "create": true
      },
      "fs": {
        "all": false,
        "readFile": true,
        "writeFile": true,
        "readDir": true,
        "createDir": true,
        "removeFile": true,
        "scope": ["$APPDATA/moodpulse/*"]
      }
    },
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "com.moodpulse.app"
    },
    "security": {
      "csp": null
    },
    "windows": [
      {
        "fullscreen": false,
        "resizable": false,
        "title": "MoodPulse",
        "width": 300,
        "height": 350,
        "decorations": false,
        "transparent": true,
        "alwaysOnTop": true,
        "skipTaskbar": true,
        "visible": true,
        "center": false,
        "x": 100,
        "y": 100
      },
      {
        "label": "report",
        "url": "/report",
        "fullscreen": false,
        "resizable": true,
        "title": "MoodPulse Report",
        "width": 500,
        "height": 700,
        "decorations": false,
        "transparent": true,
        "alwaysOnTop": false,
        "skipTaskbar": false,
        "visible": false,
        "center": true
      },
      {
        "label": "white-noise-picker",
        "url": "white-noise-picker.html",
        "fullscreen": false,
        "resizable": false,
        "title": "白噪音选择",
        "width": 400,
        "height": 500,
        "decorations": false,
        "transparent": true,
        "alwaysOnTop": true,
        "skipTaskbar": false,
        "visible": false,
        "center": true
      }
    ],
    "systemTray": {
      "iconPath": "icons/icon.ico",
      "iconAsTemplate": true
    }
  }
}
